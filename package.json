{
  "name": "zephyr-forge",
  "version": "1.1.1",
  "description": "Official installation server and script forge for the Zephyr development environment.",
  "author": "parazeeknova",
  "license": "MIT",
  "type": "module",
  "bin": {
    "zephyr-forge": "./dist/module/cli/index.js"
  },
  "main": "./dist/module/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:web\"",
    "dev:server": "bun run src/server.js",
    "dev:web": "vite",
    "build": "bun run build:web && bun run build:cli",
    "build:web": "vite build",
    "build:cli": "tsup",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "prepublishOnly": "bun run build",
    "auto": "auto",
    "release": "auto shipit",
    "preinstall": "bun run build:cli",
    "postinstall": "node dist/module/cli/commands/setup.js",
    "prepare": "bun run build",
    "testcli": "bun run format && bun run build:cli && node dist/module/cli/index.js setup"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parazeeknova/zephyr-forge.git"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@hono/node-server": "^1.13.8",
    "@t3-oss/env-core": "^0.12.0",
    "async-retry": "^1.3.3",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "debug": "^4.4.0",
    "docker-names": "^1.2.1",
    "dotenv": "^16.4.7",
    "figlet": "^1.8.0",
    "fs-extra": "^11.3.0",
    "gradient-string": "^3.0.0",
    "hono": "^4.7.0",
    "log-symbols": "^7.0.0",
    "log-update": "^6.1.0",
    "ora": "^8.2.0",
    "picocolors": "^1.1.1",
    "pretty-bytes": "^7.0.0",
    "pretty-ms": "^9.2.0",
    "sass": "^1.84.0",
    "table": "^6.9.0",
    "terminal-link": "^4.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^11.3.0",
    "@auto-it/conventional-commits": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@auto-it/npm": "^11.3.0",
    "@auto-it/released": "^11.3.0",
    "@biomejs/biome": "^1.9.4",
    "auto": "^11.3.0",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "tsup": "^8.3.6",
    "vite": "^6.1.0"
  },
  "packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92"
}
