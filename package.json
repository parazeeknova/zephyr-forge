{
  "name": "zephyr-forge",
  "version": "1.0.0",
  "description": "Official installation server and script forge for the Zephyr development environment.",
  "author": "parazeeknova",
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"bun run src/server.js\"",
    "build": "vite build",
    "start": "node src/server.js",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "docker:build": "docker build -t zephyr-forge .",
    "docker:run": "docker run -p 3000:3000 zephyr-forge",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up -d --build",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@t3-oss/env-core": "^0.12.0",
    "dotenv": "^16.4.7",
    "hono": "^4.7.0",
    "sass": "^1.84.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "vite": "^6.1.0"
  }
}
