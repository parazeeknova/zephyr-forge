{
  "name": "zephyr-forge",
  "version": "1.0.4",
  "description": "Official installation server and script forge for the Zephyr development environment.",
  "author": "parazeeknova",
  "license": "AGPL-3.0",
  "type": "module",
  "bin": {
    "zephyr-forge": "./dist/cli/index.js"
  },
  "main": "./dist/server/index.js",
  "files": ["dist"],
  "scripts": {
    "dev": "concurrently \"vite\" \"bun run src/server.js\"",
    "build": "bun run build:web && bun run build:cli",
    "build:web": "vite build",
    "build:cli": "tsup",
    "start": "node src/server.js",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "prepublishOnly": "bun run build",
    "auto": "auto",
    "release": "auto shipit"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parazeeknova/zephyr-forge.git"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@hono/node-server": "^1.13.8",
    "@t3-oss/env-core": "^0.12.0",
    "dotenv": "^16.4.7",
    "figlet": "^1.8.0",
    "fs-extra": "^11.3.0",
    "gradient-string": "^3.0.0",
    "hono": "^4.7.0",
    "picocolors": "^1.1.1",
    "sass": "^1.84.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "auto": "^11.3.0",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "tsup": "^8.3.6",
    "vite": "^6.1.0"
  }
}
